{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "jsx": "react"
    },
    "files": ["main.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
